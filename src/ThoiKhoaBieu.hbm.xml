<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class
            name="vn.edu.hcmus.fit.sv18120113.QuanLySinhVien.ThoiKhoaBieu"
            table="ThoiKhoaBieu"
            schema="QuanLySinhVien"
    >
        <id name="id" column="id"/>
        <property name="phongHoc" column="phongHoc"/>
        <property name="maLop" column="maLop"/>

        <many-to-one
                name="mon"
                class="vn.edu.hcmus.fit.sv18120113.QuanLySinhVien.Mon"
                fetch="join"
                lazy="false"
                cascade="save-update"
        >
            <column name="maMon" unique="true"/>
        </many-to-one>

    </class>
</hibernate-mapping>